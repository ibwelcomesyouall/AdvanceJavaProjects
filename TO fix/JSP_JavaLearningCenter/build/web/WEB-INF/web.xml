<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>logServlet</servlet-name>
        <servlet-class>com.jlcindia.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logServlet</servlet-name>
        <url-pattern>/login.jlc</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>regServlet</servlet-name>
        <servlet-class>com.jlcindia.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>regServlet</servlet-name>
        <url-pattern>/register.jlc</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>fwServlet</servlet-name>
        <servlet-class>com.jlcindia.servlets.ForgotPWServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fwServlet</servlet-name>
        <url-pattern>/forgotpw.jlc</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>localeServlet</servlet-name>
        <servlet-class>com.jlcindia.servlets.LocaleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>localeServlet</servlet-name>
        <url-pattern>/changelocale.jlc</url-pattern>
    </servlet-mapping>
    
</web-app>
